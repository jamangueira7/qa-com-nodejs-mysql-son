<%- contentFor('body')%>
<div class="row mt-5">
    <aside class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
        <div class="card">
            <div class="card-header">
                Ask a question
            </div>
            <div class="card-body">
                <form action="">
                    <div class="form-group">
                        <textarea name="" id="" cols="30" rows="5" class="form-control" placeholder="Ask your question herer..."></textarea>
                    </div>
                    <div class="form-group row">
                        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                            <div class="switch">
                                <input type="checkbox" id="switch"/>
                                <label for="switch"></label>
                            </div>

                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                            <button type="submit" class="btn btn-secondary">Ask!</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </aside>
    <section class="col-xs-12 col-sm-6 col-md-8 col-lg-8">
        AREA DE TIMELINE
    </section>
</div>

